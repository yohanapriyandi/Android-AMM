<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siskopsya.amm.additional.PPOBActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/ly_ada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_15sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/_15sdp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_40sdp"
                            android:text="PPOB"
                            android:textStyle="bold|italic"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/green_600" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_40sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:background="@color/green_800"
                        android:weightSum="10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_13sdp"
                                android:text="Saldo"
                                android:textStyle="bold"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/saldo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:text="Rp. 18.000.000"
                                android:textStyle="bold"
                                android:textColor="@color/white" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_gravity="end"
                            android:gravity="end">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/topup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_10sdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Isi Saldo"
                                        android:textColor="@color/blue_400"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:text="Prabayar"
                            android:textStyle="bold"
                            android:textColor="@color/grey_900" />
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/data"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/wifi"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Paket Data"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/pulsa"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/fax"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Pulsa"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/token"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/electricity"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Token PLN"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:text="Tagihan"
                            android:textStyle="bold"
                            android:textColor="@color/grey_900" />
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/telpon"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/fax"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Telepon"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/pln"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/electricity"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="PLN"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/pulsa_pasca"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/fax"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Pulsa Pasca"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/internet"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/router"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Internet"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/pdam"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/water"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="PDAM"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/tv"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/transport"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="TV"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/pgn"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@color/colorPrimaryAmm"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="PGN"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/bpjs"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@color/colorPrimaryAmm"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="BPJS"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:text="Lainnya"
                            android:textStyle="bold"
                            android:textColor="@color/grey_900" />
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/angsuran"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/cost"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Angsuran"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/emoney"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/wallet"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="E Money"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/voucher"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/coupon"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Voucher"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12">
                            <LinearLayout
                                android:id="@+id/game"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@drawable/game"/>
                                <TextView
                                    android:paddingTop="@dimen/_6sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:text="Game"
                                    android:textColor="@color/grey_800" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@color/orange_400"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/_25sdp"
                            android:text="BANNER BOTTOM"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_120sdp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/home"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@color/blue_400"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textColor="@color/blue_400"
                                android:textSize="@dimen/_12sdp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/history"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@color/red_400"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Riwayat"
                                android:textColor="@color/red_400"
                                android:textSize="@dimen/_12sdp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_18sdp"
                        android:paddingBottom="@dimen/_18sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:paddingLeft="@dimen/_4sdp">
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>